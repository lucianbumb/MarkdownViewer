{
  "name": "markdown-viewer",
  "version": "1.0.0",
  "description": "Quick and easy Markdown file viewer. In the world of AI, countless .md files are created daily. This tool provides instant viewing of markdown files with beautiful rendering, syntax highlighting, and seamless integration with Windows Explorer. Set it as your default .md viewer for effortless access.",
  "main": "main.js",
  "homepage": "https://markdownviewer.elgibesolutions.work/",
  "author": {
    "name": "ElgibeSolutions",
    "url": "https://elgibesolutions.net/"
  },
  "publisher": "ElgibeSolutions",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-store": "electron-builder --win appx",
    "postbuild": "node post-build.js"
  },
  "keywords": [
    "markdown",
    "viewer",
    "md",
    "file viewer",
    "AI",
    "documentation"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "net.elgibesolutions.markdownviewer",
    "productName": "Markdown Viewer",
    "copyright": "Copyright Â© 2025 ElgibeSolutions",
    "win": {
      "target": [
        "nsis",
        "appx"
      ],
      "icon": "markdownviewer.ico",
      "fileAssociations": [
        {
          "ext": "md",
          "name": "Markdown File",
          "description": "Markdown Document",
          "role": "Viewer"
        },
        {
          "ext": "markdown",
          "name": "Markdown File",
          "description": "Markdown Document",
          "role": "Viewer"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerHeaderIcon": "markdownviewer.ico",
      "installerSidebar": "markdownviewer.png"
    },
    "appx": {
      "applicationId": "MarkdownViewer",
      "displayName": "Markdown Viewer",
      "publisher": "CN=ElgibeSolutions",
      "publisherDisplayName": "ElgibeSolutions",
      "identityName": "ElgibeSolutions.MarkdownViewer",
      "backgroundColor": "#0969da"
    }
  },
  "dependencies": {
    "dompurify": "^3.3.0",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.1"
  },
  "devDependencies": {
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "png-to-ico": "^3.0.1"
  }
}
